<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <body>
    <referenceContainer name="footer">
      <block class="Magento\Framework\View\Element\Template" name="note-popup" as="note-popup" template="Kunak_PopupStart::note.phtml" after="-">
        <block class="Magento\Framework\View\Element\Template" name="popup" as="popup" template="Kunak_PopupStart::popup.phtml" after="-">
          <block class="Magento\Cms\Block\Block" name="popup-content">
            <arguments>
              <argument name="block_id" xsi:type="string">popup-content</argument>
            </arguments>
          </block>
        </block>
      </block>
    </referenceContainer>
  </body>
</page>